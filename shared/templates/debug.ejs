<% if( assets_root === "/" ){ %>
<script src="//cdn.jsdelivr.net/npm/bluebird@3.5.3/js/browser/bluebird.js"></script>
<script>
    Promise.config({ warnings: false });
    window.onerror = function(msg, url, linenumber) {
        alert(msg+'\n'+url+':'+linenumber);
        return false;
    };
    Promise.onPossiblyUnhandledRejection(function(error){
        alert(error.message + " " + error.stack);
        throw error;
    });
</script>
<% }else{ %>
<script src="//cdn.jsdelivr.net/npm/es6-promise@4/dist/es6-promise.auto.min.js"></script>
<% } %>