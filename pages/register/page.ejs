<%
//Automatically generated by build-script
const version= "0.2.1";
%>

<!DOCTYPE html>
<html lang="en">

<%
const assets_root_for_logo= isWebView ? "/" : assets_root;
%>

<head>
    <%- include("/head_common.ejs", { "title": "Register" }); %>

    <!-- Css files -->
    <%- include("/style_common.ejs"); %>

    <%- include("/favicon.ejs"); %>

</head>

<body class="login-page">
    <!-- Start login container -->
    <div class="container login-container">
        <div class="login-panel panel panel-default plain animated bounceIn">
            <!-- Start .panel -->
            <div class="panel-heading">
                <h4 class="panel-title text-center">
                    <img id="logo" src="<%-assets_root_for_logo%>img/logo-dark.png" alt="Dynamic logo">
                </h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal mt0" action="#" id="register-form" role="form">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Type your email ..." autocomplete="email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Your password" autocomplete="new-password">
                            </div>
                            <div class="input-group input-icon">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input type="password" name="password1" id="password1" class="form-control" placeholder="Repeat password" autocomplete="new-password">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb0">
                        <div class="col-md-12">
                            <button class="btn btn-default" type="submit">Register</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer gray-lighter-bg bt">
                <h4 class="text-center">
                    <strong>Already have an account ?</strong>
                </h4>
                <p class="text-center">
                    <a href="/login" class="btn btn-primary">Sign in</a>
                </p>
            </div>
        </div>
        <!-- End .panel -->
    </div>
    <!-- End login container -->
    <div class="container">
        <div class="footer text-center">
            By signing up you agree to our :<br>
            <a href="http://www.semasim.com/terms-conditions">terms</a>
            <span> &amp; </span>
            <a href="http://www.semasim.com/privacy-policy">privacy policy</a>
        </div>
    </div>
    <!-- Javascripts -->

    <%- include("/promise_polyfill.ejs"); %>
    <%- include("/debug.ejs"); %>


    <!-- Important javascript libs(put in all pages) -->
    <%- include("/include_jquery.ejs"); %>

    <!-- Bootstrap plugins -->
    <script src="<%-assets_root%>js/bootstrap/bootstrap.min.js"></script>
    <!-- Form plugins -->
    <script src="<%-assets_root%>plugins/forms/validation/jquery.validate.min.js"></script>
    <script src="<%-assets_root%>plugins/forms/validation/additional-methods.min.js"></script>

    <!-- Bootbox fast bootstrap modals -->
    <script src="<%-assets_root%>plugins/ui/bootbox/bootbox.min.js"></script>

    <!-- Retina.js for high res images -->
    <script type="text/javascript" src="<%-assets_root%>js/libs/retina.js/retina.min.js"></script>

    <%- include("/page_script.ejs", {"page":"register", version}); %>

</body>
</html>