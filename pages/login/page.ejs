<%
//Automatically generated by build-script
const version= "0.1.3";
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("/meta_common.ejs"); %>

    <title>Login | Semasim</title>

    <!-- Css files -->
    <%- include("/style_common.ejs"); %>

    <%- include("/favicon.ejs"); %>

</head>

<body class="login-page">
    <!-- Start login container -->
    <div class="container login-container">
        <div class="login-panel panel panel-default plain animated bounceIn">
            <!-- Start .panel -->
            <div class="panel-heading">
                <h4 class="panel-title text-center">
                    <img id="logo" src="<%-assets_root%>img/logo-dark.png" alt="Dynamic logo">
                </h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal mt0" action="#" id="login-form" role="form">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input type="text" name="email" id="email" class="form-control" placeholder="Your email ...">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Your password">
                            </div>
                            <span class="help-block text-right">
                                <a id="forgot-password" href="#">Forgout password ?</a>
                            </span>
                        </div>
                    </div>
                    <div class="form-group mb0">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 mb25">
                            <button class="btn btn-default pull-right" type="submit">Login</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer gray-lighter-bg bt">
                <h4 class="text-center">
                    <strong>Don`t have an account ?</strong>
                </h4>
                <p class="text-center">
                    <a href="/register" class="btn btn-primary">Create account</a>
                </p>
            </div>
        </div>
        <!-- End .panel -->
    </div>
    <!-- End login container -->
    <div class="container">
        <div class="footer">
            <p class="text-center">&copy;2019 Copyright Semasim. All right reserved</p>
        </div>
    </div>
    <!-- Javascripts -->

    <%- include("/debug.ejs"); %>

    <!-- Important javascript libs(put in all pages) -->
    <%- include("/include_jquery.ejs"); %>

    <!-- Bootstrap plugins -->
    <script src="<%-assets_root%>js/bootstrap/bootstrap.min.js"></script>
    <!-- Form plugins -->
    <script src="<%-assets_root%>plugins/forms/validation/jquery.validate.min.js"></script>
    <script src="<%-assets_root%>plugins/forms/validation/additional-methods.min.js"></script>

    <!-- Bootbox fast bootstrap modals -->
    <script src="<%-assets_root%>plugins/ui/bootbox/bootbox.min.js"></script>

    <!-- Retina.js for high res images -->
    <script type="text/javascript" src="<%-assets_root%>js/libs/retina.js/retina.min.js"></script>

    <!-- Cookie manager-->
    <script src="<%-assets_root%>js/libs/js.cookie-2.2.0.min.js"></script>

    <%- include("/page_script.ejs", { "page": "login", version }); %>

</body>
</html>