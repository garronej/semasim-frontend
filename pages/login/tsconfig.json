{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es3",
        "lib": [
                    "es5",
                    "dom",
                    "es2015.promise"
            ],
        "declaration": false,
        "outDir": "./dist",
        "strictNullChecks": true,
        "sourceMap": false,
        "newLine": "LF",
        "downlevelIteration": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "incremental": true
    },
    "filesGlob": [
        "./src/**/*.ts"
    ]
}

